<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
<%= f.error_notification %>
<%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Nome" %>
<%= f.input :descricao, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Descrição" %>
<%= f.input :url, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Url" %>
    <%= f.label :public, 'Privado' %>
    <%= f.input :public, label: false, as: :boolean  %>
<%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
<% end %> 