<div class="row searchable-container" >
      <div class="col-md-4 sortable vermelho "><h1 class="text-center">FAZER <%= @to_do.count %></h1>
          <%= render @to_do  %>
      </div>
      <div class="col-md-4 sortable amarelo"><h1 class="text-center">FAZENDO <%= @doing.count  %></h1>
          <%= render @doing  %>
      </div>
      <div class="col-md-4 sortable verde"><h1 class="text-center">FINALIZADO <%= @done.count  %></h1>
          <%= render @done  %>
      </div>
  </div>
</div>
<!-- Modal -->
<div class="postit ">
<%= form_for(@tasknew, remote: true, class: "form-horizontal ") do |f| %>
<div class="modal fade" id="mynewtask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Tarefas</h4>
      </div>
      <div class="modal-body form-group">
        <div class=" form-group-lg">
          <%= f.text_field :content, placeholder: "Nome da Tarefa",  class: "form-control", required: 'true', autofocus: true %> 
        </div> <br>
        <div class="">
          <%= f.text_area :descricao, placeholder: "Descrição", rows:"5",  class: "form-control" %>
        </div> <br>
        <div class="form-group-sm">
          <%= f.text_field :url, placeholder: "Url",  class:"form-control content_title" %>
        </div>
        <div class="form-group-sm">
          <%= f.label :public, "Privado" %><br>
          <%= f.check_box :public %>
         </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <%= submit_tag "Salvar", class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>


</div>
