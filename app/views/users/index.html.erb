  <div class="row">
  <h1>
    Vis√£o Geral 
    <small>Acompanhamento de Tarefas</small>
  </h1>

  <ul class="searchable-container">
    <% @users.each do |u| %>
    <li class="">
      <div class="card items">
        <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
        <div class="avatar">
          <!-- <img src="" alt="" /> -->
          <%= image_tag((), alt: "") %>
        </div>
        <% if u.avatar.present? %>
          <%= image_tag(u.avatar.url(:thumb), class:"src-image" )%> 
        <% else %>
          <%= image_tag(('avatars/avatar.png'), class:"src-image" ) %> 
        <% end -%>
        <div class="content">
          <h2> <% unless u.nome.empty? -%>
           <%= u.nome %> <%= u.sobrenome %>
           <% else %>
           <%= u.email %>
           <% end %> </h2>
           <i class="fa fa-mobile"></i> <%= u.celular if u.celular.present? %> <br>  
           <i class="fa fa-map-marker"></i> <%= u.setor if u.setor.present? %> <br>
           <% if u.funcacao.present? %>
           <i class="fa fa-graduation-cap"></i> <%= u.funcacao %> <br>
           <% else -%>
           <br>
           <% end -%>
           <% if u.formacao.present? %>
           <i class="fa fa-tag"></i></i> <%= u.formacao %> <br>
           <% else -%>
           <br>
           <% end -%>


         </p>
         <p>
          <button type="button" class="btn btn-default"><%= link_to "Tarefas", u %>  <%= u.tasks.public_tasks.count %>
          </button>
        </p>
      </div>
    </div>
  </li>
  <% end -%>
</ul>
</div>