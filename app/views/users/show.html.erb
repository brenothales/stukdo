
<h1>

  <%= @user.tasks.public_tasks.count %> Projetos Público de 
    <% if @user.nome != "" %>
      <%= @user.nome %> <%= @user.sobrenome %>
    <% else %>
      <%= @user.email %>
    <% end %>
  <small>Acompanhamento de Tarefas  </small>
</h1>

<div class="panel panel-default">
  <!-- Default panel contents
  -->
  <div class="panel-heading">
    <h4>Tarefas Públicas</h4>
  </div>
  <!-- Table
  -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col-md-3">Tarefa</th>
        <th class="col-md-2">Subtarefas</th>
        <th class="col-md-1">Última Alteração</th>
        <th class="col-md-2">Criadas</th>
        
      </tr>
    </thead>
    <tbody>
      <% @user.tasks.each do |task| %>
        <tr>
          <td>
            <% if task.state == "done" %>
            <%= task.content %> <span class="label label-success">Finalizado</span>
            <% elsif task.state == "doing" %>
            <%= task.content %> <span class="label label-warning">Fazendo</span>
            <% else  %>
            <%= task.content %>  <span class="label label-danger">Fazer</span>
            <% end %> <br>
            <b><%= task.descricao if task.descricao %></b>
            <% if task.url.present? %>  
              <%= link_to task.url, target: "_blank" do %>
               <%= task.url %> <i class="fa fa-external-link"></i>
              <% end -%>
            <% end -%>
          </td>
          <td>
            <ol id="selector">
              <% task.subtasks.each do |subtask| %>
                <li> <%= subtask.name %></li>
              <% end -%>
            </ol>
          </td>

          <td>
            <%= time_ago_in_words(task.updated_at) %>
          </td>
          <td>
            <%= time_ago_in_words(task.created_at) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
