<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
<h2 class="text-center">Perfil </h2>
<%= f.error_notification %>
 
<%= f.input :nome, required: true, autofocus: true, label: false, placeholder: "Nome", input_html: {class: "form-control"} %>
<%= f.input :sobrenome,  label: false, placeholder: "Sobrenome", input_html: {class: "form-control"} %>
<%= f.input :avatar %>
<%= f.input :celular, required: true,  label: false, placeholder: "Celular", input_html: {class: "form-control"} %> 
<%= f.input :funcacao, required: true,  label: false, placeholder: "Função", input_html: {class: "form-control"} %>
<%= f.input :formacao, required: true,  label: false, placeholder: "Formação", input_html: {class: "form-control"} %> 
<%= f.input :setor, required: true,  label: false, placeholder: "Setor", input_html: {class: "form-control"} %>  
<%= f.input :bio, required: true,  label: false, placeholder: "Sobre", input_html: {class: "form-control"} %>  
 
<%= f.input :current_password, required: true, label: false, placeholder: "Senha", input_html: {class: "form-control"} %>
 
 
<%= f.button :submit, "Atualizar", class: "btn btn-primary btn-block" %>
<% end %>
 